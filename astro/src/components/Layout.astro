---
const { title = 'Astro', description = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <slot name="head" />
    <link rel="stylesheet" href="/styles/shared.css" />
  </head>
  <body>
    <slot />
  </body>
</html>
