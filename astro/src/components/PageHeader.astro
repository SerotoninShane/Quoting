---
const { title, subtitle } = Astro.props;
---

<header class="page-header">
  <div style="display:flex; align-items:flex-start; justify-content: space-between; gap: 12px;">
    <div>
      <h1>{title}</h1>
      {subtitle && <p>{subtitle}</p>}
    </div>
    <div>
      <slot name="actions" />
    </div>
  </div>
</header>
